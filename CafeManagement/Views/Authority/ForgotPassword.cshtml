
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - Cafe Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <style>
        .card {
            background-color: #ffffff;
            border-radius: 0.5rem;
            border: 1px solid #e5e7eb;
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
            outline: none;
        }

            .btn:focus-visible {
                outline: none;
                box-shadow: 0 0 0 2px #000000, 0 0 0 2px #ffffff;
            }

            .btn:disabled {
                opacity: 0.5;
                pointer-events: none;
            }

        .btn-primary {
            background-color: #111827;
            color: #ffffff;
            height: 2.5rem;
            padding: 0.5rem 1rem;
        }

            .btn-primary:hover {
                background-color: #1f2937;
            }

        .btn-outline {
            border: 1px solid #d1d5db;
            background-color: #ffffff;
            color: #111827;
            height: 2.5rem;
            padding: 0.5rem 1rem;
        }

            .btn-outline:hover {
                background-color: #f9fafb;
                color: #111827;
            }

        .input {
            display: flex;
            height: 2.5rem;
            width: 100%;
            border-radius: 0.375rem;
            border: 1px solid #d1d5db;
            background-color: #ffffff;
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
        }

            .input::placeholder {
                color: #6b7280;
            }

            .input:focus-visible {
                outline: none;
                box-shadow: 0 0 0 2px #111827, 0 0 0 2px #ffffff;
            }

            .input:disabled {
                cursor: not-allowed;
                opacity: 0.5;
            }

            .input[type="file"] {
                border: none;
                background: transparent;
                font-size: 0.875rem;
                font-weight: 500;
            }


    </style>
</head>
<body class="min-h-screen bg-gray-50 flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="text-center mb-8">
            <div class="flex items-center justify-center gap-2 mb-4">
                <i data-lucide="coffee" class="h-8 w-8 text-orange-500"></i>
                <h1 class="text-2xl font-bold text-gray-900">Cafe Manager</h1>
            </div>
            <p class="text-gray-600">Reset your password</p>
        </div>

        <div class="card p-6">
            <div class="text-center mb-6">
                <div class="mx-auto flex items-center justify-center w-12 h-12 rounded-full bg-orange-100 mb-4">
                    <i data-lucide="key" class="h-6 w-6 text-orange-600"></i>
                </div>
                <h2 class="text-lg font-semibold text-gray-900 mb-2">Forgot your password?</h2>
                <p class="text-sm text-gray-600">
                    Enter your email address and we'll send you a link to reset your password.
                </p>
            </div>

            <form id="forgotPasswordForm" class="space-y-4" action="RecoverPassword" >
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                    <input type="email"
                           id="email"
                           name="UserName"
                           class="input"
                           placeholder="Enter your email address"
                           required>
                </div>

                <button type="submit" class="btn btn-primary w-full">
                    <i data-lucide="mail" class="h-4 w-4 mr-2"></i>
                    Send Reset Link
                </button>
            </form>

            <div class="mt-6 text-center">
                <a class="inline-flex items-center text-sm text-gray-600" hover:text-gray-900 onclick=" location.href='@Url.Action("Login", "Authority")'">
                    <i data-lucide="arrow-left" class="h-4 w-4 mr-1"></i>
                    Back to login
                </a>
            </div>
        </div>

        <div class="mt-8 text-center">
            <p class="text-xs text-gray-400">© 2024 Cafe Manager. All rights reserved.</p>
        </div>
    </div>
