@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cafe Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <style>
        .card {
            background: #ffffff;
            border-radius: 0.5rem;
            border: 1px solid #e5e7eb;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        }

        .card-header {
            padding: 1.5rem;
            padding-bottom: 0.5rem;
        }

        .card-content {
            padding: 1.5rem;
            padding-top: 0;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            font-weight: 500;
            transition: background-color 0.2s, color 0.2s;
            outline: none;
        }

        .btn-primary {
            background: #111827;
            color: #fff;
            height: 2.5rem;
            padding: 0.5rem 1rem;
        }

            .btn-primary:hover {
                background: #1f2937;
            }

        .btn-outline {
            border: 1px solid #d1d5db;
            background: #fff;
            color: #111827;
            height: 2.25rem;
            padding: 0 0.75rem;
        }

            .btn-outline:hover {
                background: #f3f4f6;
                color: #000;
            }


    </style>
</head>
<body class="min-h-screen bg-gray-50">
    <header class="bg-white border-b border-gray-200 px-6 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
                <i data-lucide="coffee" class="h-6 w-6 text-orange-500"></i>
                <h1 class="text-xl font-semibold text-gray-900">Cafe Manager</h1>
            </div>
            <div class="flex items-center gap-4">
                <button class="btn btn-outline bg-green-50 border-green-200 text-green-700 hover:bg-green-100">
                    <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                    Open
                </button>
                <a href="/Authority/Logout" class="text-gray-600 hover:text-gray-900 hover:text-red-600">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0z" />
                        <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                    </svg>
                </a>
            </div>
        </div>
    </header>

    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="card">
                <div class="card-header flex flex-row items-center justify-between space-y-0 pb-2">
                    <h3 class="text-sm font-medium text-gray-600">Today's Sales</h3>
                    <i data-lucide="dollar-sign" class="h-4 w-4 text-gray-400"></i>
                </div>
                <div class="card-content">
                    <div class="text-2xl font-bold total-sales">$1,247.50</div>
                    <p class="text-xs text-green-600 ">+12% from yesterday</p><!-- profit or loss comparison from yesterday's in percentage-->
                </div>
            </div>

            <div class="card">
                <div class="card-header flex flex-row items-center justify-between space-y-0 pb-2">
                    <h3 class="text-sm font-medium text-gray-600">Orders Today</h3>
                    <i data-lucide="shopping-cart" class="h-4 w-4 text-gray-400"></i>
                </div>
                <div class="card-content">
                    <div class="text-2xl font-bold total-orders">89</div>
                    <p class="text-xs text-green-600">+5 from yesterday</p> <!-- comparison from yesterday's in number -->
                </div>
            </div>

            <div class="card">
                <div class="card-header flex flex-row items-center justify-between space-y-0 pb-2">
                    <h3 class="text-sm font-medium text-gray-600 occupied-table">Active Tables</h3>
                    <i data-lucide="grid-3x3" class="h-4 w-4 text-gray-400"></i>
                </div>
                <div class="card-content">
                    <div class="text-2xl font-bold">4/6</div> <!-- occupied-tables/Total-table -->
                    <p class="text-xs text-gray-500 available-table">2 available</p>
                </div>
            </div>

            <div class="card">
                <div class="card-header flex flex-row items-center justify-between space-y-0 pb-2">
                    <h3 class="text-sm font-medium text-gray-600">Staff On Duty</h3>
                    <i data-lucide="users" class="h-4 w-4 text-gray-400"></i>
                </div>
                <div class="card-content">
                    <div class="text-2xl font-bold total-staffs">3</div>
                    <p class="text-xs text-gray-500">All shifts covered</p><!-- shift coverage -->
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="card">
                <div class="card-header">
                    <div class="flex items-center gap-2">
                        <i data-lucide="package" class="h-5 w-5 text-orange-500"></i>
                        <h3 class="text-lg font-semibold">Product Management</h3>
                    </div>
                </div>
                <div class="card-content space-y-4">
                    <p class="text-sm text-gray-600">Manage menu items, pricing, and inventory</p>
                    <button class="btn btn-primary w-full" onclick="location.href='@Url.Action("Product", "Cafe")'">Manage Products</button>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="flex items-center gap-2">
                        <i data-lucide="grid-3x3" class="h-5 w-5 text-blue-500"></i>
                        <h3 class="text-lg font-semibold">Table Management</h3>
                    </div>
                </div>
                <div class="card-content space-y-4">
                    <p class="text-sm text-gray-600">View table status and manage reservations</p>
                    <button class="btn btn-primary w-full" onclick="location.href='@Url.Action("Table", "Cafe")'">View Tables</button>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="flex items-center gap-2">
                        <i data-lucide="shopping-cart" class="h-5 w-5 text-green-500"></i>
                        <h3 class="text-lg font-semibold">POS System</h3>
                    </div>
                </div>
                <div class="card-content space-y-4">
                    <p class="text-sm text-gray-600">Process orders and handle transactions</p>
                    <button class="btn btn-primary w-full" onclick="location.href='@Url.Action("POS", "Cafe")'">Open POS</button>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="flex items-center gap-2">
                        <i data-lucide="users" class="h-5 w-5 text-purple-500"></i>
                        <h3 class="text-lg font-semibold">Staff & Shifts</h3>
                    </div>
                </div>
                <div class="card-content space-y-4">
                    <p class="text-sm text-gray-600">Manage staff schedules and track hours</p>
                    <button class="btn btn-primary w-full" onclick="location.href='@Url.Action("Staff", "Cafe")'">Manage Staff</button>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="flex items-center gap-2">
                        <i data-lucide="bar-chart-3" class="h-5 w-5 text-green-500"></i>
                        <h3 class="text-lg font-semibold">Sales Reports</h3>
                    </div>
                </div>
                <div class="card-content space-y-4">
                    <p class="text-sm text-gray-600">View sales analytics and generate reports</p>
                    <button class="btn btn-primary w-full" onclick="location.href='@Url.Action("Report", "Cafe")'">View Reports</button>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="flex items-center gap-2">
                        <i data-lucide="zap" class="h-5 w-5 text-orange-500"></i>
                        <h3 class="text-lg font-semibold">Quick Actions</h3>
                    </div>
                </div>
                <div class="card-content space-y-3">
                    <div class="space-y-2">
                        <button class="w-full text-left text-sm text-gray-700 hover:text-gray-900 py-1">New Order</button>
                        <button class="w-full text-left text-sm text-gray-700 hover:text-gray-900 py-1">Clock In/Out</button>
                        <button class="w-full text-left text-sm text-gray-700 hover:text-gray-900 py-1">End of Day Report</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</body>
</html>