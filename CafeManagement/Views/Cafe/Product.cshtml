@{
    Layout = null;  
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management - Cafe Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
        }

        .category-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }

        .category-coffee {
            background-color: #fef3c7;
            color: #92400e;
        }

        .category-pastry {
            background-color: #fed7aa;
            color: #c2410c;
        }

        .category-tea {
            background-color: #d1fae5;
            color: #065f46;
        }

        .status-in-stock {
            background-color: #d1fae5;
            color: #065f46;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }

        .status-low-stock {
            background-color: #f4e7a6;
            color: #a56e4d;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }

        .status-outof-stock {
            background-color: #f47979;
            color: #9b1f1f;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }
    </style>
    
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="mx-auto p-6">
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center gap-4">
                <button class="flex items-center gap-2 text-gray-600 hover:text-gray-800" onclick="location.href='@Url.Action("Index", "Cafe")'">
                    <i data-lucide="arrow-left" class="w-4 h-4"></i>
                    <span>Back to Dashboard</span>
                </button>
                <div class="flex items-center gap-2">
                    <i data-lucide="coffee" class="w-5 h-5 text-orange-500"></i>
                    <h1 class="text-xl font-semibold text-gray-900">Product Management</h1>
                </div>
            </div>
            <button id="addProductBtn" class="bg-gray-900 text-white px-4 py-2 rounded-lg flex items-center gap-2 hover:bg-gray-800">
                <i data-lucide="plus" class="w-4 h-4"></i>
                <span>Add Product</span>
            </button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                <div class="flex items-center justify-between mb-2">
                    <h3 class="text-sm font-medium text-gray-600">Total Products</h3>
                    <i data-lucide="package" class="w-4 h-4 text-gray-400"></i>
                </div>
                <p id="TotalProduct" class="text-2xl font-bold text-gray-900"></p>
            </div>

            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                <div class="flex items-center justify-between mb-2">
                    <h3 class="text-sm font-medium text-gray-600">Low Stock Items</h3>
                    <i data-lucide="alert-triangle" class="w-4 h-4 text-gray-400"></i>
                </div>
                <p id="LowStock" class="text-2xl font-bold text-orange-500"></p>
            </div>

            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                <div class="flex items-center justify-between mb-2">
                    <h3 class="text-sm font-medium text-gray-600">Out of Stock</h3>
                    <i data-lucide="x-circle" class="w-4 h-4 text-gray-400"></i>
                </div>
                <p id="OutOfStock" class="text-2xl font-bold text-red-500"></p>
            </div>

            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                <div class="flex items-center justify-between mb-2">
                    <h3 class="text-sm font-medium text-gray-600">Average Price</h3>
                    <i data-lucide="dollar-sign" class="w-4 h-4 text-gray-400"></i>
                </div>
                <p id="AveragePrice" class="text-2xl font-bold text-gray-900"></p>
            </div>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 mb-6">
            <div class="flex items-center gap-4">
                <div class="flex-1 relative">
                    <i data-lucide="search" class="w-4 h-4 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
                    <input type="text"
                           id="searchBox"
                           placeholder="Search products..."
                           class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-grey-900 focus:border-transparent">
                </div>
                <div class="relative">
                    <button id="btnSearch" class="appearance-none bg-white border border-gray-300 rounded-lg px-4 py-2 pr-8 focus:ring-2 focus:ring-blue-500 focus:border-transparent">Search</button>
                </div>
            </div>
        </div>
        <div id="productTableContainer"></div>
    </div>
	<div id="modalContainer"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/Product.js"></script>
    
</body>

</html>
