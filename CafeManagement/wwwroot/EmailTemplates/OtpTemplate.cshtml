@model CafeManagement.Models.OtpEmailViewModel


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Recovery - Secure Access Code</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #f3f4f6;
            font-family: 'Inter', Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .email-container {
            max-width: 600px;
            margin: 40px auto;
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

        .header {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            padding: 40px 30px;
            text-align: center;
            color: white;
        }

            .header h1 {
                margin: 0;
                font-size: 28px;
                font-weight: 700;
            }

            .header p {
                margin: 8px 0 0 0;
                opacity: 0.9;
                font-size: 16px;
            }

        .content {
            padding: 40px 30px;
            text-align: center;
        }

        .greeting {
            font-size: 18px;
            color: #374151;
            margin-bottom: 20px;
            font-weight: 500;
        }

        .message {
            font-size: 16px;
            color: #6b7280;
            margin-bottom: 30px;
            line-height: 1.7;
        }

        .otp-container {
            background: #f9fafb;
            border: 2px dashed #e5e7eb;
            border-radius: 12px;
            padding: 30px;
            margin: 30px 0;
        }

        .otp-label {
            font-size: 14px;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .otp-code {
            font-size: 36px;
            font-weight: 700;
            color: #1f2937;
            letter-spacing: 8px;
            font-family: 'Monaco', 'Consolas', monospace;
            margin: 10px 0;
        }

        .timer-info {
            background: #fef3c7;
            border: 1px solid #f59e0b;
            border-radius: 8px;
            padding: 15px;
            margin: 25px 0;
            font-size: 14px;
            color: #92400e;
        }

        .security-info {
            background: #f0f9ff;
            border-left: 4px solid #0ea5e9;
            padding: 20px;
            margin: 25px 0;
            text-align: left;
            border-radius: 4px;
            font-size: 14px;
        }

            .security-info h3 {
                margin: 0 0 10px 0;
                color: #0c4a6e;
                font-size: 16px;
            }

            .security-info ul {
                margin: 0;
                padding-left: 20px;
                color: #075985;
            }

        .action-buttons {
            margin: 30px 0;
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: #4f46e5;
            color: white;
        }

        .btn-secondary {
            background: #f3f4f6;
            color: #374151;
            border: 1px solid #d1d5db;
        }

        .divider {
            height: 1px;
            background: #e5e7eb;
            margin: 30px 0;
        }

        .footer {
            background: #f9fafb;
            padding: 30px;
            text-align: center;
            color: #6b7280;
            font-size: 14px;
        }

        .footer-links a {
            color: #4f46e5;
            text-decoration: none;
            margin: 0 15px;
        }

            .footer-links a:hover {
                text-decoration: underline;
            }

        .company-info {
            margin-top: 20px;
            font-size: 12px;
            color: #9ca3af;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <!-- Header -->
        <div class="header">
            <h1>Secure Access</h1>
            <p>Password Recovery Verification</p>
        </div>

        <!-- Content -->
        <div class="content">
            <div class="greeting">Hello,</div>

            <div class="message">
                We received a request to reset your password for your account associated with
                <strong>@Model.UserEmail</strong>.<br />
                Please use the verification code below to complete the password reset process.
            </div>

            <div class="otp-container">
                <div class="otp-label">Your Verification Code</div>
                <div class="otp-code">@Model.Otp</div>
            </div>

            <div class="timer-info">
                ⏰ This code expires in <strong>5 minutes</strong>
            </div>

            @* <div class="action-buttons">
                <a href="@Model.ResetLink" class="btn btn-primary">Complete Password Reset</a>
                <a href="@Model.SupportLink" class="btn btn-secondary">Need Help?</a>
            </div> *@

            <div class="security-info">
                <h3>🛡️ Security Notice</h3>
                <ul>
                    <li>Never share this code with anyone</li>
                    <li>Our team will never ask for this code</li>
                    <li>If you didn’t request this reset, secure your account immediately</li>
                    <li>This code can only be used once</li>
                </ul>
            </div>

            <div class="divider"></div>

            <p style="font-size: 14px; color: #6b7280;">
                <strong>Request Details:</strong><br />
                Time: @Model.Timestamp<br />
                @* IP Address: @Model.IpAddress<br />
                Device: @Model.DeviceInfo<br />
                Location: @Model.Location *@
            </p>
        </div>

        <!-- Footer -->
        <div class="footer">
            <p>
                If you didn’t request a password reset, please ignore this email or
                <a href="#" style="color: #dc2626;">report suspicious activity</a>.
            </p>

            <div class="footer-links">
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Service</a>
                <a href="#">Support Center</a>
            </div>

            <div class="company-info">
                <p>
                    © @DateTime.Now.Year @Model.CompanyName. All rights reserved.<br>
                    <br>
                    You're receiving this email because you have an account with us.
                </p>
            </div>
        </div>
    </div>
</body>
</html>