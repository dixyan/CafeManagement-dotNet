@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Point of Sale - Cafe Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <style>
        .category-coffee {
            background-color: #ffedd5; 
            color: #9a3412; 
            font-size: 0.75rem; 
            padding: 0.25rem 0.5rem; 
            border-radius: 9999px; 
            display: inline-block;
        }

        .category-pastry {
            background-color: #fef3c7; 
            color: #92400e; 
            font-size: 0.75rem; 
            padding: 0.25rem 0.5rem;
            border-radius: 9999px;
            display: inline-block;
        }

        .category-tea {
            background-color: #dcfce7;
            color: #166534; 
            font-size: 0.75rem; 
            padding: 0.25rem 0.5rem;
            border-radius: 9999px;
            display: inline-block;
        }

    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="mx-auto p-6">
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center gap-4">
                <button class="flex items-center gap-2 text-gray-600 hover:text-gray-800 margin-right: 20px" onclick="location.href='@Url.Action("Index", "Cafe")'">
                    <i data-lucide="arrow-left" class="w-4 h-4"></i>
                    Back to Dashboard
                </button>
                <div class="flex items-center gap-2">
                    <i data-lucide="shopping-cart" class="w-5 h-5 text-green-600"></i>
                    <h1 class="text-xl font-semibold text-gray-900">Point of Sale</h1>
                </div>
            </div>
            <div class="flex items-center gap-3">
                <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">Order #222</span>
                <button id="clear-order" class=" text-gray-600 hover:text-gray-800 ">Clear Order</button>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2 bg-gray-150 rounded-lg p-6 shadow-sm border border-gray-200 mb-6">
                <div class="bg-gray-150 rounded-lg p-6 shadow-sm mb-6">
                    <div class="flex items-center gap-4">
                        <div class="flex-1 relative">
                            <i data-lucide="search" class="w-4 h-4 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
                            <input type="text"
                                   id="searchBox"
                                   placeholder="Search products..."
                                   class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-grey-900 focus:border-transparent">
                        </div>
                        <div class="relative">
                            <button id="btnSearch" class="appearance-none bg-white border border-gray-300 rounded-lg px-4 py-2 pr-8 focus:ring-2 focus:ring-blue-500 focus:border-transparent">Search</button>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 menu-grid"></div>
                </div>
            </div>
        
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 sticky top-6">
                <div class="flex items-center gap-2 mb-4">
                    <i data-lucide="shopping-cart" class="w-5 h-5 text-gray-600"></i>
                    <h2 class="text-lg font-semibold text-gray-900">Current Order (<span id="cart-count">0</span>)</h2>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Table (Optional)</label>
                    <div class="relative">
                        <select id="tableSelect" class="appearance-none w-full bg-white border border-gray-300 rounded-lg px-4 py-2 pr-8 text-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            
                        </select>
                        <i data-lucide="chevron-down" class="w-4 h-4 absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none"></i>
                    </div>
                </div>

                    <div id="cart-items" class="mb-6 min-h-[200px] flex items-center justify-center border-t border-gray-200">
                    <p class="text-gray-500 text-center">No items in cart</p>
                </div>

                <div class="border-t border-gray-200 pt-4 space-y-3">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Subtotal:</span>
                        <span class="text-gray-900" id="subtotal">$0.00</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Tax (8%):</span>
                        <span class="text-gray-900" id="tax">$0.00</span>
                    </div>
                    <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-600">Tip Amount</span>
                        <input type="number" step="0.01" placeholder="0.00" class="w-20 text-right border border-gray-300 rounded px-2 py-1 text-sm" id="tip-input" oninput="updateTotal()">
                    </div>
                    <div class="flex justify-between text-lg font-semibold pt-2 border-t border-gray-200">
                        <span class="text-gray-900">Total:</span>
                        <span class="text-gray-900" id="total">$0.00</span>
                    </div>
                </div>

                <button id="process-payment" class="w-full bg-gray-400 text-white py-3 rounded-lg font-medium mt-6 cursor-not-allowed" disabled>
                    Process Payment
                </button>
            </div>
        </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/POS.js"></script>
</body>
</html>


