@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table Management - Cafe Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <style>
        .modal-backdrop {
            backdrop-filter: blur(2px);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="mx-auto ">
        <header class="bg-white border-gray-200 px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <button class="flex items-center gap-2 text-gray-600 hover:text-gray-800" onclick="location.href='@Url.Action("Index", "Cafe")'">
                        <i data-lucide="arrow-left" class="w-4 h-4"></i>
                        <span>Back to Dashboard</span>
                    </button>
                    <div class="flex items-center gap-2">
                        <i data-lucide="layout-grid" class="w-5 h-5 text-blue-600"></i>
                        <h1 class="text-xl font-semibold text-gray-900">Table Management</h1>
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <span class="text-xs font-bold text-green-800 Available"></span>
                        <span class="ml-1">Available</span>
                    </span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <span class="text-xs font-bold text-red-800 Occupied"></span>
                        <span class="ml-1">Occupied</span>
                    </span>
                </div>

            </div>
        </header>

        <main class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-sm font-medium text-gray-600">Total Tables</h3>
                        <p id="TotalTable" class="text-2xl font-bold text-gray-900 mt-2"></p>
                    </div>
                </div>

                <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-sm font-medium text-gray-600">Available</h3>
                        <p class="text-2xl font-bold text-gray-900 mt-2 Available"></p>
                    </div>
                </div>

                <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-sm font-medium text-gray-600">Occupied</h3>
                        <p class="text-2xl font-bold text-gray-900 mt-2 Occupied"></p>
                    </div>
                </div>

                <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-sm font-medium text-gray-600">Reserved</h3>
                        <p id="Reserved" class="text-2xl font-bold text-gray-900 mt-2"></p>
                    </div>
                </div>
            </div>


            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                    <div class="flex items-center gap-2 mb-6">
                        <i data-lucide="home" class="w-5 h-5 text-blue-600"></i>
                        <h2 class="text-lg font-semibold text-gray-900">Indoor Tables</h2>
                        <span id="indoor-count" class="bg-gray-100 text-gray-600 text-sm px-2 py-1 rounded">0</span>
                    </div>

                    <div class="space-y-4">
                        <div id="indoor-loading" class="text-center py-4 text-gray-500 hidden">
                            <i data-lucide="loader-2" class="w-5 h-5 animate-spin mx-auto mb-2"></i>
                            Loading tables...
                        </div>
                        <div id="indoorTableContainer" class="space-y-4"></div>
                        <button id="addIndoorTableBtn" class="w-full mt-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 flex items-center justify-center gap-2">
                            <i data-lucide="plus" class="w-4 h-4"></i>
                            Add Indoor Table
                        </button>
                    </div>
                </div>

                <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                    <div class="flex items-center gap-2 mb-6">
                        <i data-lucide="trees" class="w-5 h-5 text-green-600"></i>
                        <h2 class="text-lg font-semibold text-gray-900">Outdoor Tables</h2>
                        <span id="outdoor-count" class="bg-gray-100 text-gray-600 text-sm px-2 py-1 rounded">0</span>
                    </div>

                    <div class="space-y-4">
                        <div id="outdoor-loading" class="text-center py-4 text-gray-500 hidden">
                            <i data-lucide="loader-2" class="w-5 h-5 animate-spin mx-auto mb-2"></i>
                            Loading tables...
                        </div>
                        <div id="outdoorTableContainer" class="space-y-4"></div>
                        <button id="addOutdoorTableBtn" class="w-full mt-4 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 flex items-center justify-center gap-2">
                            <i data-lucide="plus" class="w-4 h-4"></i>
                            Add Outdoor Table
                        </button>
                    </div>
                </div>

                <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                    <div class="flex items-center gap-2 mb-6">
                        <i data-lucide="sun" class="w-5 h-5 text-orange-600"></i>
                        <h2 class="text-lg font-semibold text-gray-900">Patio Tables</h2>
                        <span id="patio-count" class="bg-gray-100 text-gray-600 text-sm px-2 py-1 rounded">0</span>
                    </div>

                    <div class="space-y-4">
                        <div id="patio-loading" class="text-center py-4 text-gray-500 hidden">
                            <i data-lucide="loader-2" class="w-5 h-5 animate-spin mx-auto mb-2"></i>
                            Loading tables...
                        </div>
                        <div id="patioTableContainer" class="space-y-4"></div>
                        <button id="addPatioTableBtn" class="w-full mt-4 bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700 flex items-center justify-center gap-2">
                            <i data-lucide="plus" class="w-4 h-4"></i>
                            Add Patio Table
                        </button>
                    </div>
                </div>
            </div>

            <div class="mt-6 text-center">
                <button id="refreshAllTablesBtn" class="bg-gray-600 text-white px-6 py-2 rounded hover:bg-gray-700 flex items-center justify-center gap-2 mx-auto">
                    <i data-lucide="refresh-cw" class="w-4 h-4"></i>
                    Refresh All Tables
                </button>
            </div>
        </main>

        <div id="addTableModal" class="fixed inset-0 bg-black bg-opacity-50 modal-backdrop hidden flex items-center justify-center z-50">
            <div class="bg-white rounded-lg p-6 w-full max-w-md mx-4">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900" id="addTableModalTitle">Add New Table</h3>
                    <button onclick="closeAddTableModal()" class="text-gray-400 hover:text-gray-600">
                        <i data-lucide="x" class="w-5 h-5"></i>
                    </button>
                </div>

                <p class="text-sm text-gray-600 mb-6">Create a new table for the selected section</p>

                <form id="addTableForm" class="space-y-4">
                    <input type="hidden" id="TableSection" name="Section" value="">

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Table Number</label>
                        <input type="text" id="TableNumber" name="TableNumber" placeholder="e.g., T1, A5, P3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                        <p class="text-xs text-gray-500 mt-1">Enter a unique table identifier</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Number of Seats</label>
                        <select id="TableSeats" name="Seats" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                            <option value="">Select seats...</option>
                            <option value="2">2 Seats</option>
                            <option value="4">4 Seats</option>
                            <option value="6">6 Seats</option>
                            <option value="8">8 Seats</option>
                            <option value="10">10 Seats</option>
                            <option value="12">12 Seats</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Section</label>
                        <input type="text" id="TableSectionDisplay" readonly class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description (Optional)</label>
                        <textarea id="TableDescription" name="Description" placeholder="Any special notes about this table..." rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"></textarea>
                    </div>

                    <div class="flex gap-3 pt-4">
                        <button type="button" onclick="closeAddTableModal()" class="flex-1 px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Cancel
                        </button>
                        <button type="submit" class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <span class="add-table-btn-text">Create Table</span>
                            <span class="add-table-loading hidden">
                                <i data-lucide="loader-2" class="w-4 h-4 animate-spin inline mr-1"></i>
                                Creating...
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div id="reservationModal" class="fixed inset-0 bg-black bg-opacity-50 modal-backdrop hidden flex items-center justify-center z-50">
            <div class="bg-white rounded-lg p-6 w-full max-w-md mx-4">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900" id="modalTitle">Reserve Table 3</h3>
                    <button onclick="closeReservationModal()" class="text-gray-400 hover:text-gray-600">
                        <i data-lucide="x" class="w-5 h-5"></i>
                    </button>
                </div>

                <p class="text-sm text-gray-600 mb-6">Create a reservation for this table</p>

                <form id="reservationModalForm" class="space-y-4">
                    <input type="hidden" id="TableId" name="TableId" value="">

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Customer Name</label>
                        <input type="text" id="CustomerName" name="CustomerName" placeholder="Enter Customer Name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Customer Phone</label>
                        <input type="text" id="CustomerPhone" name="CustomerPhone" placeholder="Enter Customer Phone" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Reservation Time</label>
                        <input type="datetime-local" id="ReservationTime" name="ReservationTime" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Notes (Optional)</label>
                        <textarea id="Notes" name="Notes" placeholder="Special requests or notes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"></textarea>
                    </div>

                    <div class="flex gap-3 pt-4">
                        <button type="button" onclick="closeReservationModal()" class="flex-1 px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Cancel
                        </button>
                        <button type="submit" class="flex-1 px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Create Reservation
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/Table.js"></script>
    </div>
</body>

</html>